{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "..",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "plugins": [
      {
        "transform": "./src/compiler/genericResponseTransformer/transformer.ts"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/compiler/**/*"
  ]
}
